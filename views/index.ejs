<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	
	<title>AI Game v0.0.1</title>

	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" type="text/css" href="../public/css/fontawesome.css">
</head>

<body>

<div class="container">

	<div class="board">
		<div class="overlay">
			<% for (let i = 0; i < 11*11; i++) { %>
				<div class="tile">
				</div>
			<% } %>
		</div>

		<div id="players">

		</div>
		<!-- <div class="playerUnit"></div> -->
	</div>

	<div class="gameForm">
		<form id="joinGame">
			<input id="joinName" type="text" maxlength="8">
			<button>Join Game</button>
		</form>

		<form id="startGame">
			<button>Start</button>
		</form>

		<form id="console">
			<button>Console</button>
		</form>
	</div>

	<!-- <div id="gamePanel" style="color: white;">
		<p>Game Environment</p>
		<p>Time: <span id="gameTime"></span></p>
		<p>Players: </p>
		<ul id="listOfPlayers">
		</ul>
	</div> -->

	<div id="chatbox">
		<ul></ul>
		<form action="">
			<input id="m" type="text" autocomplete="off" maxlength="50" placeholder="Type to chat">
		</form>
	</div>

	<div id="instructionPanel" style="color: white">
		<!-- <h4>Add Instruction</h4> -->
		<input type="text" placeholder="Add Instruction">
		<ul id="listOfInstructions">
			<li>randomMove</li>
		</ul>
		<button>Update AI</button>
	</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/script.js"></script>

</body>
</html>
